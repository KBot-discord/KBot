{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^db:generate", "^build"],
			"outputs": ["dist/**", "build/**"],
			"cache": true
		},
		"lint": {
			"dependsOn": ["^build", "build"],
			"outputs": [],
			"cache": true
		},
		"format": {
			"dependsOn": ["^build", "build"],
			"outputs": [],
			"cache": true
		},
		"test": {
			"outputs": ["coverage"],
			"cache": true
		},
		"dev": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:deploy": {
			"cache": false
		}
	}
}
