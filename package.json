{
	"name": "@kbotdev/apps",
	"version": "0.0.1",
	"author": "@kbotdev",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"plugins/*",
		"protos/*"
	],
	"scripts": {
		"update": "yarn upgrade-interactive",
		"dd": "yarn dedupe --strategy highest",
		"build": "turbo run build",
		"build:bot": "yarn turbo build --filter=@kbotdev/bot",
		"build:docs": "yarn turbo build --filter=@kbotdev/docs",
		"test": "vitest run --coverage",
		"test:ui": "vitest --ui --coverage",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"db:generate": "turbo run db:generate",
		"db:push": "turbo run db:push",
		"docker:bot": "docker buildx build -f apps/bot/Dockerfile -t kbot/bot ."
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@kbotdev/eslint-config": "^2.0.1",
		"@kbotdev/prettier-config": "^1.0.2",
		"@kbotdev/ts-config": "^1.0.2",
		"@swc/core": "^1.3.100",
		"@types/node": "^20.10.4",
		"@typescript-eslint/parser": "^6.13.2",
		"@vitest/coverage-v8": "^1.0.4",
		"@vitest/ui": "^1.0.4",
		"eslint": "8.55.0",
		"eslint-config-turbo": "^1.11.1",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"prettier": "^3.1.1",
		"schemix": "^1.14.1",
		"turbo": "1.11.1",
		"typescript": "^5.3.3",
		"vite-tsconfig-paths": "^4.2.2",
		"vitest": "^1.0.4"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --log-level=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --log-level=warn \"**/*.{json,yml,yaml,md}\""
		],
		"*.prisma": [
			"prisma format"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"engines": {
		"node": ">=20.x"
	},
	"packageManager": "yarn@4.0.2"
}
