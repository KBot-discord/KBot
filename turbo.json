{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["db:generate", "^build"],
			"inputs": ["src/**/*.ts"],
			"outputs": ["dist/**", "build/**"],
			"cache": true
		},
		"lint": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts"],
			"outputs": [],
			"cache": true
		},
		"lint:fix": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts"],
			"outputs": [],
			"cache": true
		},
		"format": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts"],
			"outputs": [],
			"cache": true,
			"outputMode": "full"
		},
		"check": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts"],
			"outputs": [],
			"cache": true
		},
		"test": {
			"outputs": ["coverage/**"],
			"cache": true
		},
		"sync": {
			"cache": false,
			"outputMode": "errors-only"
		},
		"db:generate": {
			"inputs": ["prisma/schema.prisma"],
			"cache": false
		},
		"db:push": {
			"inputs": ["prisma/schema.prisma"],
			"cache": false
		},
		"db:deploy": {
			"inputs": ["prisma/schema.prisma"],
			"cache": false
		}
	},
	"globalEnv": ["NODE_ENV"]
}
