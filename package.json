{
	"name": "@kbotdev/apps",
	"version": "0.0.1",
	"author": "@kbotdev",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"plugins/*",
		"protos/*"
	],
	"scripts": {
		"postinstall": "husky install",
		"update": "yarn upgrade-interactive",
		"build": "turbo run build",
		"build:bot": "yarn turbo build --filter=@kbotdev/bot",
		"build:docs": "yarn turbo build --filter=@kbotdev/docs",
		"build:web": "yarn turbo build --filter=@kbotdev/web",
		"test": "vitest run --coverage",
		"test:ui": "vitest --ui --coverage",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"db:generate": "turbo run db:generate",
		"db:push": "turbo run db:push",
		"docker:bot": "docker buildx build -f apps/bot/Dockerfile -t kbot/bot .",
		"docker:status": "docker buildx build -f apps/discord-status/Dockerfile -t kbot/discord-status .",
		"docker:web": "docker buildx build -f apps/web/Dockerfile -t kbot/web .",
		"k8s:build": "kustomize build ./k8s -o ./k8s/result.yml",
		"k8s:sync": "bash scripts/kustomize-sync.sh"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@kbotdev/eslint-config": "^0.1.1",
		"@kbotdev/prettier-config": "^0.1.0",
		"@kbotdev/ts-config": "^0.1.0",
		"@swc/core": "^1.3.66",
		"@types/node": "^20.3.1",
		"@vitest/coverage-v8": "^0.32.2",
		"@vitest/ui": "^0.32.2",
		"eslint": "^8.43.0",
		"eslint-config-turbo": "^1.10.3",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"schemix": "^1.14.0",
		"turbo": "1.10.3",
		"typescript": "^5.1.3",
		"vite-tsconfig-paths": "^4.2.0",
		"vitest": "^0.32.2"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"engines": {
		"node": ">=18.x"
	},
	"packageManager": "yarn@3.6.0"
}
