{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["db:generate", "buf:generate", "^build"],
			"inputs": ["src/**/*.ts", "src/**/*.svelte"],
			"outputs": ["dist/**", "build/**"],
			"cache": true
		},
		"lint": {
			"dependsOn": [],
			"inputs": ["packages/eslint-config/**/*", "src/**/*.ts", "src/**/*.svelte"],
			"outputs": [],
			"cache": true
		},
		"lint:fix": {
			"dependsOn": [],
			"inputs": ["packages/eslint-config/**/*", "src/**/*.ts", "src/**/*.svelte"],
			"outputs": [],
			"cache": true
		},
		"format": {
			"dependsOn": [],
			"inputs": ["packages/prettier-config/**/*", "src/**/*.ts", "src/**/*.svelte"],
			"outputs": [],
			"cache": true
		},
		"test": {
			"outputs": ["coverage/**"],
			"cache": true
		},
		"dev": {
			"cache": false
		},
		"buf:generate": {
			"inputs": ["protos/**"],
			"cache": true
		},
		"db:generate": {
			"inputs": ["prisma/schema.prisma"],
			"cache": false
		},
		"db:push": {
			"inputs": ["prisma/schema.prisma"],
			"cache": false
		},
		"db:deploy": {
			"inputs": ["prisma/schema.prisma"],
			"cache": false
		}
	},
	"globalEnv": ["NODE_ENV"]
}
