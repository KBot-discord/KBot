{
	"name": "@kbotdev/apps",
	"version": "0.0.1",
	"author": "@kbotdev",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/**",
			"packages/**",
			"protos/**"
		]
	},
	"scripts": {
		"build": "turbo run build",
		"build:bot": "yarn turbo build --filter=@kbotdev/bot",
		"build:docs": "yarn turbo build --filter=@kbotdev/docs",
		"build:web": "yarn turbo build --filter=@kbotdev/web",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"db:generate": "turbo run db:generate",
		"db:push": "turbo run db:push",
		"update": "yarn upgrade-interactive",
		"postinstall": "husky install"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.6.3",
		"@kbotdev/eslint-config": "workspace:^",
		"@kbotdev/prettier-config": "workspace:^",
		"@kbotdev/ts-config": "workspace:^",
		"@types/node": "^20.1.0",
		"eslint": "^8.40.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"schemix": "^1.12.0",
		"turbo": "^1.9.3",
		"typescript": "^5.0.4",
		"vitest": "^0.31.0"
	},
	"lint-staged": {
		"*.{js,cjs,ts}": [
			"eslint --fix --ext ts",
			"prettier --write --loglevel=warn \"**/*.{js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"engines": {
		"node": ">=18.x"
	},
	"packageManager": "yarn@3.5.0"
}
