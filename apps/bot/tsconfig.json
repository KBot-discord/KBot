{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"noEmit": true,
		"incremental": true,
		"typeRoots": ["./src/lib/types/**/*", "../../node_modules/@types"],
		"paths": {
			"#config": ["config.ts"],
			"#lib/*": ["lib/*"],
			"#lib/services/*": ["lib/services/*"],
			"#modules/*": ["modules/*"],
			"#plugins/*": ["plugins/*"]
		}
	},
	"include": ["src"]
}
