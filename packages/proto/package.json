{
	"name": "@kbotdev/proto",
	"version": "0.0.0",
	"license": "AGPL-3.0-or-later",
	"private": true,
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsup",
		"buf:generate": "rm -r -f src/gen && yarn buf:bot && yarn buf:types",
		"buf:bot": "buf generate ../../protos/bot",
		"buf:types": "buf generate ../../protos/types",
		"check": "tsc --noEmit",
		"lint": "eslint --ext ts src && yarn check",
		"lint:fix": "eslint --fix --ext ts src",
		"format": "prettier --write --loglevel=warn \"src/**/*.ts\""
	},
	"devDependencies": {
		"@bufbuild/protoc-gen-connect-es": "^0.9.0",
		"@bufbuild/protoc-gen-es": "^1.2.0",
		"@swc/core": "^1.3.60",
		"eslint": "^8.41.0",
		"prettier": "^2.8.8",
		"tsup": "^6.7.0"
	}
}
